<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-md-4 ">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3>Burgers To Devour</h3>
                </div>
                <div class="card-body">

                    {{#each burger}}
                    {{#unless devoured}}
                    <div class="toDevour" id={{id}}>
                        <i class="fas fa-hamburger"></i>
                        <p style="display: inline-block;">{{burger_name}}</p>&nbsp &nbsp &nbsp
                        <i class="fas fa-utensils customer" data-id={{id}} data-toggle="tooltip" data-placement="top"
                            title="Devour It"></i>&nbsp
                        <i class="fas fa-times-circle remove" data-id={{id}} data-toggle="tooltip" data-placement="top"
                            title="Delete Burger"></i>
                    </div>

                    {{/unless}}
                    {{/each}}

                </div>
            </div>


        </div>
        <div class="col-md-4 "><img class="img-fluid" src="/assets/media/logo.jpg"></div>
        <div class="col-md-4 ">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3>Devoured Burgers</h3>
                </div>
                <div class="card-body devourDiv">

                    {{#each cutomers}}


                    <div>
                        <i class="fas fa-hamburger"></i>
                        <p style="display: inline-block;">{{burger_name}}(Eaten by {{name}})</p>
                    </div>

                    {{/each}}


                </div>

            </div>

        </div>
    </div>
    <div class="row"></div>
    <div class="row mt-5">
        <div class="col-md-4 offset-md-4 ">
            <form class="form-inline justify-content-center" id="addburger">
                <div class="form-group mr-2">
                    <input id="newburger" type="text" class="form-control" placeholder="Add Burger to Devour"
                        autocomplete="off">
                </div>
                <button type="submit" class="btn btn-primary addbtn"><strong>Add</strong></button>
            </form>
            <br>
            <div class="text-center legends">
                <i class="fas fa-utensils"></i>
                <p style="display: inline-block;">: Devour Burger</p>
            </div>
            <div class="text-center legends">
                <i class="fas fa-times-circle remove"></i>
                <p style="display: inline-block;">: Delete Burger</p>
            </div>
        </div>

    </div>
    <div class="modal shadow">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <br>
                    <div class="form-group text-center">
                        <input class="form-control" type="text" id="customerName" placeholder="Devoured By"
                            autocomplete="off">
                        <button class="btn btn-primary devour"><strong>Submit</strong></button>
                    </div>

                </div>
            </div>
        </div>


    </div>
</div>